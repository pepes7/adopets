<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.CadastroActivity"
        android:background="@color/colorBackground">
    <ImageView
            android:layout_width="543dp"
            android:layout_height="390dp" app:srcCompat="@drawable/group"
            android:id="@+id/imageView" tools:layout_editor_absoluteY="3dp" tools:layout_editor_absoluteX="-46dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="365dp"
            android:layout_height="406dp" android:layout_marginTop="210dp"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp">
        <android.support.v7.widget.CardView
                android:layout_width="366dp"
                android:layout_height="match_parent"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background">
            <TextView
                    android:text="CADASTRE SUA CONTA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title" android:textSize="18sp"
                    android:layout_marginBottom="80dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="65dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="60dp"/>
            <EditText
                    android:drawableLeft="@drawable/ic_name"
                    android:drawableStart="@drawable/ic_name"
                    android:drawablePadding="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextNome" android:layout_marginTop="90dp" android:layout_marginLeft="50dp"
                    android:textColor="@color/colorField" android:textColorHighlight="@color/colorTitle"
                    android:textColorHint="@color/colorField" android:hint="Nome Completo"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="6dp"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editTextEmail"
                    android:hint="E-mail"
                    android:layout_marginTop="165dp"
                    android:layout_marginBottom="154dp" android:layout_marginLeft="50dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawableStart="@drawable/ic_password"
                    android:drawablePadding="6dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/editTextSenha"
                    android:layout_marginTop="240dp"
                    android:hint="Senha" android:layout_marginLeft="50dp"/>
            <Button
                    android:text="CADASTRAR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/botaoCadastrar"
                    android:onClick="cadastrar"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="320dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="55dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/btn_login" android:layout_marginRight="70dp"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <TextView
            android:text="Adote, doe e voluntarie-se!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:fontFamily="@font/supermercadoone_regular" android:textColor="@color/colorPattern"
            android:textSize="18sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="152dp"
            android:layout_marginStart="44dp" android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toTopOf="@+id/toolbar"/>
    <ImageView
            android:layout_width="282dp"
            android:layout_height="164dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView3" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="33dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:text="JÃ¡ tem cadastro?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textColor="#FFFFFF"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/button2" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginEnd="10dp" android:fontFamily="@font/nunito_light"/>
    <Button
            android:text="Entre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:background="@color/colorBackground" android:textColor="@color/colorBtnEdge2"
            android:onClick="telaCadastro" app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="43dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="3dp" app:layout_constraintVertical_bias="1.0"
            android:textColorLink="#00FFF3F3" android:textColorHighlight="@color/colorBackgroundIn"
            android:fontFamily="@font/nunito_semibold"/>

</android.support.constraint.ConstraintLayout>